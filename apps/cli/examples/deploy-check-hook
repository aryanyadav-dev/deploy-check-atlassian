#!/bin/bash
# Pre-commit hook script for deployment risk analysis
# This script runs deploy-check on staged changes before allowing commits
#
# Requirements: 2.6
#
# Installation:
#   1. Copy this file to your project (e.g., scripts/deploy-check-hook)
#   2. Make it executable: chmod +x scripts/deploy-check-hook
#   3. Reference it in .pre-commit-config.yaml
#
# Or use as a standalone git hook:
#   1. Copy to .git/hooks/pre-commit
#   2. Make it executable: chmod +x .git/hooks/pre-commit

set -e

# Colors for output
RED='\033[0;31m'
YELLOW='\033[1;33m'
GREEN='\033[0;32m'
BLUE='\033[0;34m'
NC='\033[0m' # No Color

# Configuration
FAIL_ON_LEVEL="${DEPLOY_CHECK_FAIL_ON:-high}"  # low, medium, high, critical
SKIP_PATTERNS="${DEPLOY_CHECK_SKIP:-}"          # Comma-separated patterns to skip

echo -e "${BLUE}üîç Running deployment risk analysis...${NC}"

# Check if deploy-check is installed
if ! command -v deploy-check &> /dev/null; then
    echo -e "${YELLOW}‚ö†Ô∏è  deploy-check CLI not found. Install with: npm install -g @dra/cli${NC}"
    echo -e "${YELLOW}   Skipping risk analysis.${NC}"
    exit 0
fi

# Get list of staged files
STAGED_FILES=$(git diff --cached --name-only --diff-filter=ACMR)

if [ -z "$STAGED_FILES" ]; then
    echo -e "${GREEN}‚úÖ No staged files to analyze.${NC}"
    exit 0
fi

# Check if any staged files match skip patterns
if [ -n "$SKIP_PATTERNS" ]; then
    FILTERED_FILES=""
    IFS=',' read -ra PATTERNS <<< "$SKIP_PATTERNS"
    for file in $STAGED_FILES; do
        SKIP=false
        for pattern in "${PATTERNS[@]}"; do
            if [[ "$file" == *"$pattern"* ]]; then
                SKIP=true
                break
            fi
        done
        if [ "$SKIP" = false ]; then
            FILTERED_FILES="$FILTERED_FILES $file"
        fi
    done
    STAGED_FILES="$FILTERED_FILES"
fi

# Count files by type
TS_COUNT=$(echo "$STAGED_FILES" | grep -E '\.(ts|tsx|js|jsx)$' | wc -l | tr -d ' ')
SQL_COUNT=$(echo "$STAGED_FILES" | grep -E '\.sql$' | wc -l | tr -d ' ')
YAML_COUNT=$(echo "$STAGED_FILES" | grep -E '\.(ya?ml)$' | wc -l | tr -d ' ')

echo -e "   Analyzing: ${TS_COUNT} TypeScript/JS, ${SQL_COUNT} SQL, ${YAML_COUNT} YAML files"

# Create temporary file for results
RESULT_FILE=$(mktemp)
trap "rm -f $RESULT_FILE" EXIT

# Run analysis on staged changes
# Using HEAD as base to compare staged changes
deploy-check analyze \
    --base HEAD \
    --fail-on "$FAIL_ON_LEVEL" \
    --json > "$RESULT_FILE" 2>&1

EXIT_CODE=$?

# Parse results
if [ -f "$RESULT_FILE" ]; then
    RISK_LEVEL=$(cat "$RESULT_FILE" | jq -r '.riskLevel // "unknown"' 2>/dev/null || echo "unknown")
    RISK_SCORE=$(cat "$RESULT_FILE" | jq -r '.riskScore // 0' 2>/dev/null || echo "0")
    FINDINGS_COUNT=$(cat "$RESULT_FILE" | jq -r '.findings | length // 0' 2>/dev/null || echo "0")
else
    RISK_LEVEL="unknown"
    RISK_SCORE="0"
    FINDINGS_COUNT="0"
fi

# Display results
echo ""
case "$RISK_LEVEL" in
    "low")
        echo -e "${GREEN}‚úÖ Risk Level: LOW (Score: $RISK_SCORE/100)${NC}"
        ;;
    "medium")
        echo -e "${YELLOW}‚ö†Ô∏è  Risk Level: MEDIUM (Score: $RISK_SCORE/100)${NC}"
        ;;
    "high")
        echo -e "${RED}üî¥ Risk Level: HIGH (Score: $RISK_SCORE/100)${NC}"
        ;;
    "critical")
        echo -e "${RED}üö® Risk Level: CRITICAL (Score: $RISK_SCORE/100)${NC}"
        ;;
    *)
        echo -e "${BLUE}‚ÑπÔ∏è  Risk Level: Unknown${NC}"
        ;;
esac

# Show findings summary
if [ "$FINDINGS_COUNT" -gt 0 ]; then
    echo -e "\n${YELLOW}Findings ($FINDINGS_COUNT):${NC}"
    cat "$RESULT_FILE" | jq -r '.findings[] | "  - [\(.severity)] \(.type): \(.title // .description)"' 2>/dev/null | head -10
    
    if [ "$FINDINGS_COUNT" -gt 10 ]; then
        echo -e "  ... and $((FINDINGS_COUNT - 10)) more"
    fi
fi

# Handle exit based on risk level
if [ $EXIT_CODE -ne 0 ]; then
    echo ""
    echo -e "${RED}‚ùå Commit blocked due to $RISK_LEVEL risk level.${NC}"
    echo -e "${YELLOW}   Review findings above and address before committing.${NC}"
    echo -e "${YELLOW}   To bypass: git commit --no-verify${NC}"
    exit 1
fi

echo ""
echo -e "${GREEN}‚úÖ Risk analysis passed. Proceeding with commit.${NC}"
exit 0
